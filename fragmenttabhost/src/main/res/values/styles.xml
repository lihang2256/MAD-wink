<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--底部按钮栏样式-->
    <style name="Botton_Tab_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/px_28</item>
        <item name="android:textColor">@color/bottom_tab_selector</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <!---->
    <style name="Button_Stylt">
        <item name="android:layout_marginTop">@dimen/px_30</item>
        <item name="android:layout_marginRight">@dimen/px_30</item>
        <item name="android:layout_marginLeft">@dimen/px_30</item>
        <item name="android:background">@drawable/shape_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:padding">@dimen/px_30</item>
        <item name="android:textSize">@dimen/px_48</item>
    </style>

</resources>
